<Window x:Class="AsynchronousProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsynchronousProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="296" Width="516">
    <Grid>
        <Button x:Name="btnStart" Content="Сортировать" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="81" Width="220" Click="btnStart_Click"/>
        <Button Content="Кнопка для проверки блокировки" HorizontalAlignment="Left" Margin="251,10,0,0" VerticalAlignment="Top" Height="81" Width="220"/>
        <TextBox x:Name="tbResult" HorizontalAlignment="Left" Margin="10,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="tbCount" HorizontalAlignment="Left" Margin="251,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button Content="Сортировка с блокировкой" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Height="53" Width="220" Click="Button_Click"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="251,140,0,0" VerticalAlignment="Top" Height="53" Width="220" Click="Button_Click_1"/>

    </Grid>
</Window>
